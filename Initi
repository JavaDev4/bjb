import com.openpojo.reflection.PojoClass;
import com.openpojo.reflection.PojoClassFilter;
import com.openpojo.reflection.filters.FilterChain;
import com.openpojo.reflection.filters.FilterPackageInfo;
import com.openpojo.validation.PojoValidator;
import com.openpojo.validation.ValidatorBuilder;
import com.openpojo.validation.rule.impl.NoPublicFieldsRule;
import com.openpojo.validation.test.impl.GetterTester;
import com.openpojo.validation.test.impl.SetterTester;
import org.junit.Test;

public class PersonTest {

    @Test
    public void validatePersonClass() {
        // Create a PojoValidator
        PojoValidator validator = ValidatorBuilder.create()
                .with(new NoPublicFieldsRule()) // Ensure no public fields
                .with(new GetterTester()) // Test getters
                .with(new SetterTester()) // Test setters
                .build();

        // Filter out package-info classes
        PojoClassFilter filter = new FilterChain(new FilterPackageInfo());

        // Validate the Person class within the specified package
        validator.validate("com.example.model", filter);
    }
}

